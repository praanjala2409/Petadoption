              <div class="col-12">
                <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                <input type="email" class="form-control" id="emailid" placeholder="you@example.com" name="email">
                <div class="invalid-feedback">
                  Please enter a valid email address for shipping updates.
                </div>
              </div>

              <div class="col-12">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" placeholder="1234 Main St"  name="ad1">
                <div class="invalid-feedback">
                  Please enter your shipping address.
                </div>
              </div>

              <div class="col-12">
                <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
                <input type="text" class="form-control" id="address2" placeholder="Apartment or suite" name="ad2">
              </div>

              <div class="col-12">
                <label for="state" class="form-label">State </label>
                <input type="text" class="form-control" id="states" placeholder="State" name="State">
              </div>

              <div class="col-md-3">
                <label for="zip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="zip" placeholder="" required name="pincode">
                <div class="invalid-feedback">
                  Zip code required.
                </div>
              </div>
              <div class="col-12">
                <label for="animal" class="form-label">Name of the animal you are adopting: </label>
                <input type="text" class="form-control" id="animal" placeholder="Name" name="cat">
              </div>
            </div>

            <hr class="my-4">
            <button class=" btn btn-lg btn-group mb-2 btn1" type="submit">Submit</button>
            <button type="button" class=" btn btn-lg btn-group mb-2 " ><a href="/userdogs">Cancel</a></button>
